# 数据库配置
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=effitime_prod
MYSQL_USER=effitime_user
MYSQL_PASSWORD=your_secure_db_password_here

# JWT认证配置
JWT_SECRET=your_super_secure_jwt_secret_key_at_least_256_bits_long
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# CORS配置
CORS_ORIGIN=https://your-domain.com,https://app.your-domain.com

# 限流配置
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# 邮件服务配置
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=EffiTime <noreply@your-domain.com>

# 文件上传配置
UPLOAD_MAX_SIZE=5242880
FILE_UPLOAD_PATH=/app/uploads

# SSL/TLS配置
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 监控配置
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=warn

# 域名配置
DOMAIN=your-domain.com
API_DOMAIN=api.your-domain.com

# 数据库连接池配置
DB_CONNECTION_LIMIT=20
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# Redis配置
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0